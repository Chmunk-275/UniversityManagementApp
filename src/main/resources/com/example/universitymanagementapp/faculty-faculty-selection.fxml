<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ToolBar?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" styleClass="anchor-pane" stylesheets="@admin-students-management.css" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.universitymanagementapp.controller.FacultyController.FacultyFacultyController">
    <children>
        <!-- Top toolbar with page title -->
        <ToolBar fx:id="toolBar" prefHeight="40.0" prefWidth="600.0" styleClass="tool-bar" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0" />

        <!-- TabPane for All Faculty, Selected Faculty, and Faculty Details -->
        <TabPane fx:id="tabPane" styleClass="tab-pane" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="54.0">
            <tabs>
                <!-- Tab showing all faculty members -->
                <Tab closable="false" text="All Faculty">
                    <content>
                        <AnchorPane>
                            <children>
                                <HBox fx:id="allFacultyHBox" spacing="10.0" styleClass="hbox" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
                                    <children>
                                        <TextField fx:id="facultySearch" promptText="Search by name or ID" styleClass="text-field" prefWidth="200.0" />
                                        <Button fx:id="editButton" onAction="#handleEditFaculty" text="Edit Faculty" />
                                        <Button fx:id="deleteButton" onAction="#handleDeleteFaculty" text="Delete Faculty" />
                                    </children>
                                </HBox>
                                <TableView fx:id="allFacultyTable" styleClass="table-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                                    <columns>
                                        <TableColumn fx:id="facultyIdColumn" prefWidth="80.0" text="ID" />
                                        <TableColumn fx:id="nameColumn" prefWidth="150.0" text="Name" />
                                        <TableColumn fx:id="departmentColumn" prefWidth="150.0" text="Department" />
                                        <TableColumn fx:id="emailColumn" prefWidth="150.0" text="Email" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <!-- Tab showing the faculty selected by the user -->
                <Tab closable="false" text="Selected Faculty">
                    <content>
                        <AnchorPane>
                            <children>
                                <HBox fx:id="selectedFacultyHBox" spacing="10.0" styleClass="hbox" AnchorPane.leftAnchor="10.0" AnchorPane.rightAnchor="10.0" AnchorPane.topAnchor="5.0">
                                    <children>
                                        <Button fx:id="selectedEditButton" onAction="#handleEditFaculty" text="Edit Faculty" />
                                        <Button fx:id="selectedDeleteButton" onAction="#handleDeleteFaculty" text="Delete Faculty" />
                                        <TextField fx:id="selectedFacultySearch" promptText="Search by name or ID" styleClass="text-field" prefWidth="200.0" />
                                    </children>
                                </HBox>
                                <TableView fx:id="selectedFacultyTable" styleClass="table-view" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="40.0">
                                    <columns>
                                        <TableColumn fx:id="selectedFacultyIdColumn" prefWidth="80.0" text="ID" />
                                        <TableColumn fx:id="selectedNameColumn" prefWidth="150.0" text="Name" />
                                        <TableColumn fx:id="selectedDepartmentColumn" prefWidth="150.0" text="Department" />
                                        <TableColumn fx:id="selectedEmailColumn" prefWidth="150.0" text="Email" />
                                    </columns>
                                </TableView>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
                <!-- New Tab for Faculty Details (Editing) -->
                <Tab closable="false" text="Faculty Details">
                    <content>
                        <AnchorPane>
                            <children>
                                <Label text="Faculty Details" styleClass="label" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="10.0" />
                                <Label text="Name:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="40.0" />
                                <TextField fx:id="editNameField" promptText="Enter name" prefWidth="200.0" styleClass="text-field" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="40.0" />
                                <Label text="Degree:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="80.0" />
                                <TextField fx:id="editDegreeField" promptText="Enter degree" prefWidth="200.0" styleClass="text-field" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="80.0" />
                                <Label text="Email:" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="120.0" />
                                <TextField fx:id="editEmailField" promptText="Enter email" prefWidth="200.0" styleClass="text-field" AnchorPane.leftAnchor="100.0" AnchorPane.topAnchor="120.0" />
                                <HBox spacing="10.0" AnchorPane.leftAnchor="10.0" AnchorPane.topAnchor="160.0">
                                    <children>
                                        <Button fx:id="saveButton" onAction="#handleSaveFaculty" text="Save" />
                                        <Button fx:id="clearButton" onAction="#handleClearForm" text="Clear" />
                                    </children>
                                </HBox>
                            </children>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </children>
</AnchorPane>